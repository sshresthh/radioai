# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Audio Device Configuration
# Run find_devices.py to find your device IDs
INPUT_DEVICE_ID=0
OUTPUT_DEVICE_ID=0

# Serial Port Configuration
# Default: /dev/cu.SLAB_USBtoUART (Digirig on macOS)
# On Linux: usually /dev/ttyUSB0 or /dev/ttyACM0
# On Windows: usually COM3, COM4, etc.
SERIAL_PORT=/dev/cu.SLAB_USBtoUART

# Voice Activity Detection (VAD) Settings
# Silence threshold: minimum volume to start recording (0.0-1.0)
SILENCE_THRESHOLD=0.02

# Silence duration: seconds of silence before ending recording
SILENCE_DURATION=0.8
